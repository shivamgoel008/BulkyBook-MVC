@model Category

<form method="post" asp-action="DeletePOST">
    <!-- ID in DeletePOST is null because all the below things are disabled so we add the below line"-->
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Delete Category</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            @*when form is posted it will post an object of this category(line no1 ) class with name populated *@
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            @*when form is posted it will post an object of this category(line no1 ) class with name populated *@
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">
            Delete
        </button>


    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

