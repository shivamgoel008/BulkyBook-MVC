@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-light">Edit Category</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            @*when form is posted it will post an object of this category(line no1 ) class with name populated *@
            <input asp-for="Name" class="form-control" />
            @*below satement is used to validate the feild if it is not proper than it shows the error message*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            @*when form is posted it will post an object of this category(line no1 ) class with name populated *@
            <input asp-for="DisplayOrder" class="form-control" />
            @*below satement is used to validate the feild if it is not proper than it shows the error message*@
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">
            Update
        </button>

        
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

